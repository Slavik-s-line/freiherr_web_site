<div class="container" style="padding: 4em 0; width: 25rem;">
  <div class="row">
    <div class="col">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="mb-3 text-center">
          <h1>Увійти</h1>
        </div>
        <div class="mb-3" style="padding: 1em 0;">
          <div class="row">
            <div class="col text-end">
              Ще не маєте акаунту?
            </div>
            <div class="col text-center">
              <b><%= link_to "Зареєструватись", new_user_registration_path, class: "nav-link" %></b>
            </div>
          </div>
        </div>

        <div class="mb-3">
          <%= f.label :email, class: "form-label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="col text-start d-grid col-12">
          <%= f.submit "Увійти", class: "btn btn-secondary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>